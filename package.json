{
  "name": "@edenspiekermann/stylelint-config",
  "version": "0.0.1",
  "description": "A shareable stylelint config for ESPI projects",
  "main": "index.js",
  "keywords": [
    "stylelint",
    "stylelint config",
    "prettier",
    "linting",
    "tailwind",
    "styled components"
  ],
  "scripts": {
    "lint": "eslint . --ext .js",
    "release": "np"
  },
  "repository": {
    "url": "https://github.com/edenspiekermann/espi-stylelint-config",
    "type": "git"
  },
  "husky": {
    "hooks": {
