{
  "name": "@edenspiekermann/stylelint-config",
  "version": "1.0.2",
  "description": "A shareable stylelint config for ESPI projects",
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "stylelint",
    "stylelint config",
    "linting",
    "tailwind",
    "styled components"
  ],
  "scripts": {
    "prepare": "npx husky install",
    "lint": "eslint . --ext .js",
    "release": "HUSKY_SKIP_HOOKS=1 np"
  },
  "repository": {
    "url": "https://github.com/edenspiekermann/espi-stylelint-config",
    "type": "git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js,!__fixtures/**/*.js": [
      "eslint --fix"
    ]
  },
  "author": "Edenspiekermann",
  "license": "MIT",
  "dependencies": {
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.18.0"
  },
  "devDependencies": {
    "@edenspiekermann/eslint-config": "^1.0.1",
    "eslint": "^7.10.0",
    "husky": "^6.0.0",
    "lint-staged": "^12.1.4",
    "np": "^7.0.0",
    "yarn": "^1.22.10"
  },
  "peerDependencies": {
    "stylelint": "^13.7.2"
  }
}
